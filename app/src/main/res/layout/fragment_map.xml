<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.nhn.android.maps.NMapView
    android:id="@+id/mapView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"/>

  <ImageButton
    android:id="@+id/myloc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/app_name"
    app:srcCompat="@drawable/ic_home"/>

  <android.support.v7.widget.CardView
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:layout_margin="5dp"
    android:layout_gravity="bottom"
    android:visibility="invisible"
    app:cardBackgroundColor="@android:color/black"
    card:cardCornerRadius="4dp"
    card:elevation="1dp"
    tools:visibility="visible">

    <FrameLayout
      android:id="@+id/detailLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/key_line_normal"
        android:layout_marginStart="@dimen/key_line_normal"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="장소명"/>

      <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginStart="@dimen/key_line_normal"
        android:alpha="0.54"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="#태그"/>

      <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/key_line_normal"
        android:layout_marginEnd="@dimen/key_line_normal"
        android:layout_gravity="end"
        tools:background="@android:color/darker_gray"
        tools:ignore="ContentDescription"/>

      <android.support.v7.widget.AppCompatButton
        android:id="@+id/godetail"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/key_line_small"
        android:layout_marginStart="@dimen/key_line_small"
        android:layout_gravity="bottom"
        android:paddingStart="@dimen/key_line_small"
        android:paddingEnd="@dimen/key_line_small"
        android:minWidth="64dp"
        android:text="상세보기"
        android:textColor="@android:color/holo_red_light"
        tools:ignore="HardcodedText"/>

    </FrameLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>