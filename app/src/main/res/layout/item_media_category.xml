<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_category_height">

    <TextView
        style="@style/Widget.AppTheme.Main.CategoryText"
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_category_text_height"
        tools:text="Category" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_media"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_media_height" />

</LinearLayout>