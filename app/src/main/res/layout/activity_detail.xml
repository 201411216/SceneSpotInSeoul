<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/media_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#445963"
        app:layout_constraintTop_toBottomOf="@id/media_image"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id = "@+id/Scenename"
        android:text = "박명수 딱따구리"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:textSize="30dp"
        />
    <TextView
        android:id= "@+id/tagView"
        app:layout_constraintTop_toBottomOf="@id/Scenename"
        android:text="#유재석 #하하"
        android:textSize="20dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#445963"
        app:layout_constraintTop_toBottomOf="@id/tagView"
        android:layout_marginTop="10dp"
        />
    <ImageButton
        android:id="@+id/picture"
        android:src="@drawable/outline_add_a_photo_black_18dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="100dp"

        />
    <TextView
        android:id = "@+id/guide"
        app:layout_constraintTop_toBottomOf="@id/picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="fill_horizontal"
        android:text="사진을 업로드하려면 위 이미지를 클릭해주세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_map" />




</android.support.constraint.ConstraintLayout>